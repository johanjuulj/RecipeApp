@model Recipe


<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Kitchen</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <h4>@Model.Id</h4>

        <div class="addToPlan">
            <p class="button">
                <a class="btn btn-primary" asp-controller="FoodPlan" asp-action="AddToFoodPlan"
                   asp-route-recipeId="@Model.Id">Add to food plan</a>
            </p>
        </div>
        <div class="deleteRecipe">
            <p class="button">
                <a class="btn btn-warning" asp-controller="Recipe" asp-action="Remove"
                   asp-route-recipeId="@Model.Id">Remove Recipe</a>
            </p>
        </div>

    </div>
</div>